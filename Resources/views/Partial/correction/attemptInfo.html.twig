{% if nbAttemptAllowed == 0 or givenUp %}
	{% if not givenUp and currentPaper|default %}
        <div class="">{{ 'attempt info8'|trans }}</div>
	{% else %}
        <div class="">{{ 'attempt info6'|trans }}</div>
    {% endif %}
{% elseif nbAttemptAllowed > 0 %}
    <div class="">
        {{ 'attempt info4'|trans }} {{nbAttemptAllowed}}
        {% if nbAttemptAllowed > 1 %}
            {{ 'attempt info2plur'|trans }}
        {% else %}
            {{ 'attempt info2sing'|trans }}
        {% endif %}
        {{ 'attempt info5'|trans }}
        {% if currentPaper is defined and currentPaper != null %}
        	{{ 'attempt info7'|trans }}
        {% endif %}
    </div>
{% endif %}